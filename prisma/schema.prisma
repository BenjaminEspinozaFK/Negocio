generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(cuid())
  name      String
  category  String
  price     Float
  unit      String
  image     String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@index([name])
}

model Settings {
  id        String   @id @default("admin-config")
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
